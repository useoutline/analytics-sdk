{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib/*.ts", "lib/**/*.ts", "*.json"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "outDir": "dist"
  }
}
