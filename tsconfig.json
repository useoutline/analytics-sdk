{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/lib/types",
    "outDir": "dist/lib",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["lib/*.ts", "lib/**/*.ts", "*.json"]
}
